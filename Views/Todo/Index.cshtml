
@{
    ViewData["Title"] = "Index";
}

@model BilgeAdamAspNetCoreTest.Models.TodoFormViewModel


<div class="row" style="margin-top:50px;">
    <div class="col-md-6">

        <form asp-controller="Todo" asp-action="Save" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Title"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Title" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>

        <hr />

        @await Component.InvokeAsync("TodoList")

    </div>
</div>
